<h1>Editing Book</h1>
<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
    	<h3>入力した内容にエラーがあります</h3>
    	<ul>
      		<% @book.errors.full_messages.each do |message| %>
        		<li><%= message %></li>
    		<% end %>
    	</ul>
  	<% end %>

	<div class="edit1">
		<p class="edit_title">Title</p>
  		<%= f.text_field :title %>
  		<p class="edit_body">Body</p>
  		<%= f.text_area :body %>
  		<p class="edit_update"><%= f.submit 'Update Book' %></p>
  	</div>
<% end %>
<div class="edit2">
	<%= link_to "Show", book_path(@book.id) %>
	<a>|</a>
	<%= link_to "Back", books_path(@book.id) %>
</div>