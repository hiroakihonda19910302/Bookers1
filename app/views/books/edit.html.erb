<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
	<div class="edit1">
		<p class="edit_title">Title</p>
  		<%= f.text_field :title %>
  		<p class="edit_body">Body</p>
  		<%= f.text_area :body %>
  		<p class="edit_update"><%= f.submit 'Update Book' %></p>
  	</div>
<% end %>
<div class="edit2">
	<%= link_to "Show", book_path(@book.id) %>
	<a>|</a>
	<%= link_to "Back", books_path(@book.id) %>
</div>